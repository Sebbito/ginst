{
    "programs": [
        {
            "name": "fish",
            "install": {
                "Fedora Linux": "sudo dnf install -y fish"
            }
        },
        {
            "name": "lvim",
            "install": {
                "Fedora Linux": "LV_BRANCH='release-1.2/neovim-0.8' bash <(curl -s https://raw.githubusercontent.com/lunarvim/lunarvim/fc6873809934917b470bff1b072171879899a36b/utils/installer/install.sh) -- --yes"
            },
            "dependencies": {
                "programs": [
                    {
                        "name": "nvim",
                        "install": {
                            "Fedora Linux": "sudo dnf install -y neovim"
                        }
                    },
                    {
                        "name": "git",
                        "install": {
                            "Fedora Linux": "sudo dnf install -y git"
                        }
                    },
                    {
                        "name": "make"
                    },
                    {
                        "name": "pip"
                    },
                    {
                        "name": "python3"
                    },
                    {
                        "name": "npm"
                    },
                    {
                        "name": "node"
                    },
                    {
                        "name": "cargo",
                        "install": {
                            "Fedora Linux": "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y"
                        }
                    }
                ]
            }
        },
        {
            "name": "kitty",
            "install": {
                "Fedora Linux": "sudo dnf install -y kitty"
            }
        }
    ]
}
